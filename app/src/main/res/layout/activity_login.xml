<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/loginTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:text="賬號登錄"
        android:textColor="#333"
        android:textSize="34px" />


    <ImageView
        android:id="@+id/loginCreateLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginTv"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="20px"
        android:src="@mipmap/create_account_line" />

    <ImageView
        android:id="@+id/login_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/loginCreateLine"
        android:layout_alignParentRight="true"
        android:layout_marginRight="46px"
        android:layout_marginTop="16px"
        android:src="@mipmap/close_button" />


    <TextView
        android:id="@+id/loginPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginCreateLine"
        android:layout_marginLeft="30px"
        android:layout_marginTop="40px"
        android:text="手機號"
        android:textColor="#333"
        android:textSize="24px" />

    <EditText
        android:id="@+id/login_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginPhone"
        android:layout_marginLeft="30px"
        android:layout_marginTop="20px"
        android:background="@mipmap/phone_number_output" />

    <TextView
        android:id="@+id/loginPasswordCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_phone_number"
        android:layout_marginLeft="30px"
        android:layout_marginTop="30px"
        android:text="密碼"
        android:textColor="#333"
        android:textSize="24px" />

    <EditText
        android:id="@+id/login_password_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginPasswordCode"
        android:layout_marginLeft="30px"
        android:layout_marginTop="20px"
        android:background="@mipmap/verification_code_input" />

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_below="@id/login_password_code"-->
    <!--android:layout_marginRight="30px"-->
    <!--android:layout_marginTop="20px"-->
    <!--android:text="忘記密碼?"-->
    <!--android:textColor="#333"-->
    <!--android:textSize="26px" />-->

    <TextView
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_password_code"
        android:layout_marginLeft="30px"
        android:layout_marginTop="90px"
        android:background="@mipmap/no_use_button"
        android:gravity="center"
        android:text="登錄"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/login_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn"
        android:layout_marginLeft="30px"
        android:layout_marginTop="20px"
        android:background="@mipmap/create_account_pressed"
        android:gravity="center"
        android:text="創建賬號"
        android:textColor="#fff" />


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/iconLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_weibo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210px"
            android:src="@mipmap/weibo_icon" />

        <ImageView
            android:id="@+id/login_weixin_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130px"
            android:src="@mipmap/weixin_icon" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/iconLl"
        android:layout_marginBottom="50px"
        android:layout_marginTop="90px"
        android:gravity="center"
        android:text="使用社交賬號"
        android:textColor="#333"
        android:textSize="30px" />

</com.zhy.autolayout.AutoRelativeLayout>