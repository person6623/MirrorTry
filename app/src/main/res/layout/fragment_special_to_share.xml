<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_special_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22px"
            android:layout_marginTop="20px"
            android:text="專題分享"
            android:textColor="@android:color/white"
            android:textSize="30px" />

        <ImageView
            android:id="@+id/iv_share_down_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_share"
            android:layout_below="@id/tv_share"
            android:layout_marginTop="10px"
            android:src="@mipmap/title_down_line" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_share"
            android:layout_alignRight="@id/iv_share_down_line"
            android:src="@mipmap/drop_down_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_share"
            android:layout_below="@id/iv_share_down_line"
            android:layout_marginTop="26px"
            android:text="顯示排序為 最新推薦"
            android:textColor="@android:color/white" />



    </com.zhy.autolayout.AutoRelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/special_share_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_special_share"
        android:layout_marginTop="94px">

    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/pb_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</com.zhy.autolayout.AutoRelativeLayout>

