<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_brand_body_glass_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54px"
        android:layout_marginTop="102px"
        android:text="女款｜晶粉貓眼太陽鏡"
        android:textColor="#333"
        android:textSize="32px" />

    <ImageView
        android:id="@+id/iv_line_glass_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54px"
        android:layout_marginRight="54px"
        android:layout_marginTop="24px"
        android:background="@mipmap/black_line" />

    <ImageView
        android:id="@+id/iv_img_glass_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.zhy.autolayout.AutoLinearLayout>