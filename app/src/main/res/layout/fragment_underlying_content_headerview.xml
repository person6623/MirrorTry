<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50000000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_share_glass_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:layout_marginTop="220px"
        android:background="@mipmap/share" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_glass_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_share_glass_details"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:background="@mipmap/show_five_out"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_glass_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="38px"
            android:gravity="center_horizontal"
            android:text="SPRING STRINGS"
            android:textColor="#fff"
            android:textSize="70px"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_marginTop="54px"
            android:background="@mipmap/title_down_line" />

        <TextView
            android:id="@+id/tv_brand_glass_details"
            android:layout_width="match_parent"
            android:layout_height="76px"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:gravity="center"
            android:text="女款｜晶粉貓眼太陽鏡"
            android:textColor="#fff"
            android:textSize="42px" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:background="@mipmap/title_down_line" />

        <TextView
            android:id="@+id/tv_info_des_glass_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_marginTop="50px"
            android:gravity="center"
            android:text="来自韩国的眼镜潮牌SPRING STRINGS是现代与复古的完美承载体，以古典与怀旧为基本设计风格，再融合现代的流行元素，深受潮人们的青睐。\n猫眼型镜框设计感十足。既要典雅尊贵，又要时尚弄潮儿一般的摩登姿态，低调中展现别样风情，彰显独特魅力。\n"
            android:textColor="#fff"
            android:textSize="24px" />

        <TextView
            android:id="@+id/tv_price_glass_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48px"
            android:text="1280"
            android:textColor="#fff"
            android:textSize="36px"
            android:textStyle="bold" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_details_glass_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/all_glass_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48px"
        android:text="滑动浏览详情"
        android:textColor="#fff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14px"
        android:layout_below="@+id/tv_details_glass_details"
        android:background="@mipmap/drop_down_arrow"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="158px"/>
</com.zhy.autolayout.AutoRelativeLayout>