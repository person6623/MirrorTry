                android:layout_toLeftOf="@+id/tv_country_upper"
                android:text="The frame comes from Korea"
                android:textColor="#fff"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/arl_title_upper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >

            <TextView
                android:layout_marginTop="30px"
                android:id="@+id/tv_title_name_upper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="時髦復古"
                android:textColor="#fff"
                android:layout_marginBottom="28px"
                android:textSize="60px" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="#fff" />

        <TextView
            android:id="@+id/tv_introContent_upper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="30px"
