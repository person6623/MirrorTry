<?xml version="1.0" encoding="utf-8"?>
<com.mirror.mirrortry.alladdress.SlidingMenuView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:background="@android:color/white">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_word_recipients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24px"
                android:paddingTop="40px"
                android:text="收件人: "
                android:textColor="#333"
                android:textSize="26px" />

            <TextView

                android:id="@+id/tv_item_recipients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:layout_toRightOf="@id/tv_word_recipients"
                android:text="asda"
                android:textColor="#333"
                android:textSize="26px" />

            <TextView
                android:id="@+id/tv_word_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_recipients"
                android:layout_marginTop="20px"
                android:paddingLeft="24px"
                android:text="地址: "
                android:textSize="24px" />

            <TextView
                android:id="@+id/tv_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_recipients"
                android:layout_marginTop="20px"
                android:layout_toRightOf="@id/tv_word_address"
                android:text="asdasda"
                android:textSize="24px" />

            <TextView
                android:id="@+id/tv_item_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item_address"
                android:layout_marginBottom="40px"
                android:layout_marginTop="20px"
                android:paddingLeft="24px"
                android:text="5435465456"
                android:textSize="18px" />

            <ImageView
                android:id="@+id/iv_item_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="60px"
                android:background="@mipmap/edit" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/tv_item_delete"
            android:layout_width="130px"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rl_address"
            android:layout_alignTop="@id/rl_address"
            android:layout_toRightOf="@id/rl_address"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:text="删除"
            android:textColor="@android:color/white"
            android:textSize="26px" />


    </com.zhy.autolayout.AutoRelativeLayout>


</com.mirror.mirrortry.alladdress.SlidingMenuView>