<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:background="@android:color/holo_red_light"
        android:layout_marginRight="30px"
        android:layout_marginLeft="30px">

        <TextView
            android:id="@+id/tv_word_recipients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收件人: "
            android:textSize="26px"
            android:textColor="#333"
            android:paddingLeft="24px"
            android:paddingTop="40px"/>
        <TextView

            android:id="@+id/tv_item_recipients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_word_recipients"
            android:text="asda"
            android:textSize="26px"
            android:textColor="#333"
            android:layout_marginTop="40px"/>
        <TextView
            android:id="@+id/tv_word_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_recipients"
            android:text="地址: "
            android:textSize="24px"
            android:layout_marginTop="20px"
            android:paddingLeft="24px"
            />
        <TextView
            android:id="@+id/tv_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_word_address"
            android:layout_below="@id/tv_item_recipients"
            android:text="asdasda"
            android:textSize="24px"
            android:layout_marginTop="20px"
            />

        <TextView
            android:id="@+id/tv_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5435465456"
            android:layout_below="@id/tv_item_address"
            android:paddingLeft="24px"
            android:layout_marginTop="20px"
            android:layout_marginBottom="40px"
            />

        <ImageView
            android:id="@+id/iv_item_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/edit"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60px"/>

    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>