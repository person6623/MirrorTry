<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="540px"
        android:layout_height="833px"
        android:layout_marginLeft="22px">

        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="540px"
            android:layout_height="595px"
            android:background="@mipmap/drop_down_arrow" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="238px"
            android:layout_below="@id/iv_item"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:layout_marginTop="50px"
                android:text="SEE"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_brand"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32px"
                android:text="¥450"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_produce_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_brand"
                android:layout_marginLeft="32px"
                android:layout_marginTop="16px"
                android:text="法國巴黎"
                android:textSize="24px" />

            <ImageView
                android:id="@+id/iv_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_produce_place"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                android:layout_marginTop="30px"
                android:background="@mipmap/black_line" />

            <TextView
                android:id="@+id/produce_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_black"
                android:layout_marginLeft="32px"

                android:layout_marginTop="16px"
                android:text="草莓"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>