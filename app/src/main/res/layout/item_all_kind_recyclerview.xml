<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    >

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="540px"
        android:layout_height="833px"
        android:layout_marginLeft="22px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_subject_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_share_word"
                android:layout_width="match_parent"
                android:layout_height="128px"
                android:layout_alignBottom="@id/iv_subject_share"
                android:background="@android:color/white">


            <ImageView
                android:id="@+id/iv_black_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_subject_share"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                android:layout_marginTop="34px"
                android:background="@mipmap/black_line" />

                <TextView
                    android:id="@+id/tv_brand_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_black_line"
                    android:layout_marginLeft="32px"
                    android:layout_marginTop="16px"
                    android:text="草莓"
                    android:textSize="30px"
                    android:textColor="#000"/>

            </com.zhy.autolayout.AutoRelativeLayout>



        </com.zhy.autolayout.AutoRelativeLayout>



        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            />



        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_word"
            android:layout_width="match_parent"
            android:layout_height="238px"
            android:layout_alignBottom="@id/iv_item"
            >

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32px"
                android:layout_marginTop="50px"
                android:text="SEE"
                android:textSize="30px"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_goods_name"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32px"
                android:text="450"
                android:textSize="30px"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/tv_produce_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_goods_name"
                android:layout_marginLeft="32px"
                android:layout_marginTop="16px"
                android:text="法國巴黎"
                android:textSize="24px"
                android:textColor="#333"/>

            <ImageView
                android:id="@+id/iv_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_produce_place"
                android:layout_marginLeft="32px"
                android:layout_marginRight="32px"
                android:layout_marginTop="30px"
                android:background="@mipmap/black_line" />

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_black"
                android:layout_marginLeft="32px"
                android:textColor="#000"
                android:layout_marginTop="16px"
                android:text="草莓"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>