<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cre_all_kind"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="540px"
        android:layout_height="833px"
        android:layout_marginLeft="22px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/iv_subject_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_subject_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <ProgressBar
                android:id="@+id/pb_subject_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_share_word"
                android:layout_width="match_parent"
                android:layout_height="128px"
                android:layout_alignBottom="@id/iv_subject_share">

                <ImageView
                    android:id="@+id/iv_black_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_subject_share"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="32px"
                    android:layout_marginTop="34px"
                    android:background="@mipmap/black_line" />

                <TextView
                    android:id="@+id/tv_brand_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_black_line"
                    android:layout_marginLeft="32px"
                    android:layout_marginTop="16px"
                    android:text="草莓"
                    android:textColor="#000"
                    android:textSize="30px" />

            </com.zhy.autolayout.AutoRelativeLayout>


        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/iv_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/iv_item_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <ProgressBar
                android:id="@+id/pb_item_all_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />


            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/rl_word"
                android:layout_width="match_parent"
                android:layout_height="238px"
                android:layout_alignBottom="@id/iv_item">

                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32px"
                    android:layout_marginTop="50px"
                    android:text="SEE"
                    android:textColor="#000"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_goods_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="32px"
                    android:text="450"
                    android:textColor="#000"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_produce_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_goods_name"
                    android:layout_marginLeft="32px"
                    android:layout_marginTop="16px"
                    android:text="法國巴黎"
                    android:textColor="#333"
                    android:textSize="24px" />

                <ImageView
                    android:id="@+id/iv_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_produce_place"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="32px"
                    android:layout_marginTop="30px"
                    android:background="@mipmap/black_line" />

                <TextView
                    android:id="@+id/tv_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_black"
                    android:layout_marginLeft="32px"
                    android:layout_marginTop="16px"
                    android:text="草莓"
                    android:textColor="#000"
                    android:textSize="30px" />
            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>